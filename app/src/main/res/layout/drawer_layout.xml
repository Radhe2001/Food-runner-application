<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="170dp"
    android:background="#FFD89C">

    <ImageView
        android:id="@+id/imgProfileImageDrawerLayout"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/ic_profile"
        android:layout_margin="15dp" />

    <TextView
        android:id="@+id/txtNameDrawerLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Radheshyam Jha"
        android:textSize="23sp"
        android:textColor="#000000"
        android:textStyle="italic"
        android:layout_toRightOf="@id/imgProfileImageDrawerLayout"
        android:layout_marginTop="30dp"/>

    <TextView
        android:id="@+id/txtMoblieNumberDrawerLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="6204293537"
        android:textSize="25sp"
        android:textColor="#000000"
        android:textStyle="italic"
        android:layout_toRightOf="@id/imgProfileImageDrawerLayout"
        android:layout_below="@id/txtNameDrawerLayout"
        android:layout_marginTop="10dp"/>


</RelativeLayout>